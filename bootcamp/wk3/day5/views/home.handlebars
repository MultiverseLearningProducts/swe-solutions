<h1>{{restaurants.length}} Restaurants
    <a href="/new">Add</a>
</h1>
<section>

    {{#each restaurants}}

        <article>

            <h1>{{this.name}}
                    <a href="/restaurants/{{this.id}}/delete" aria-label="Delete {{this.name}}"> <i data-feather="x-square"></i>
                    </a>
            </h1>
            
            <a href="/restaurants/{{this.id}}" aria-label="Open {{this.name}} Menu">
            <main><header style="background-image: url({{this.image}});"></header></main>
                 
            </a>

        </article>


    {{/each}}

<script>
    feather.replace(); // supports the display of feather icon
</script>

</section>